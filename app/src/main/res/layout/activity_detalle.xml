<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_activity_detalle"
    app:layout_gravity="center_horizontal"
    tools:context=".ui.ActivityDetalle">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/imageViewPlanta"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/aloe"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvNombre_InfoPlanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#020202"
                android:fontFamily="@font/russo_one"
                android:scrollbarStyle="outsideInset"
                android:text="@string/aloe_vera_titulo_info"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNomComunPlanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/convergence"
                android:inputType="text"
                android:text="@string/nomComunAloe"
                android:textAlignment="viewStart"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat,TextViewEdits" />

            <TextView
                android:id="@+id/tvNomCientificoPlanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/convergence"
                android:text="@string/nomCientificoAloe"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTemporadaPlanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/convergence"
                android:text="@string/temporadaAloe"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/convergence"
                android:inputType="textMultiLine|text"
                android:lines="20"
                android:maxLines="20"
                android:singleLine="false"
                android:text="@string/descripcionAloe"
                android:textColor="#020202"
                android:textSize="14sp"
                tools:ignore="TextViewEdits" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>