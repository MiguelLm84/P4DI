<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">  //Theme.MaterialComponents.DayNight.DarkActionBar
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1DE9B6</item>
        <item name="colorPrimaryVariant">@color/variant</item>
        <item name="colorOnPrimary">#00BFA5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A7FFEB</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">  //.ActionBar.Primary
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/toolbar</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/russo_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode_transition</item>
        <item name="android:windowExitTransition">@transition/explode_transition</item>
    </style>

    <style name="Theme.AppTheme.EtiquetaTitulo">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/russo_one</item>
    </style>

    <style name="Theme.AppTheme.EtiquetaNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_titulo</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Material.Light.Button">
        <item name="background">@drawable/borde_card</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Button.Green" parent="@android:style/Widget.Material.Light.Button">
        <item name="backgroundTint">@color/teal_700</item>
    </style>

    <style name="Theme.AppTheme.EtiquetaTituloDetalle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/russo_one</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ActivityDetalle" parent="Theme.AppCompat.DayNight.NoActionBar"/>

    <style name="webview" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="background">@color/design_default_color_background</item>
    </style>

</resources>